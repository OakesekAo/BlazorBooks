
<div class="right-box">
    <h3 class="m-0 text-center py-3 bg-white heading">Popular Books</h3>
    <div class="popular-books-list">
        @foreach (var b in PopularBooksList)
        {
            <div class="popular-book-item">
                <a href="/books/@b.Id" alt="@b.Title">
                    <img src="@b.Image" alt="b.Title" class="me-3" />
                 </a>
                <div class="d=flex flex-column justify-content-center">
                    <a href="/books/@b.Id" class="book-title" alt="@b.Title">@b.Title</a>
                    <a href="/author/@b.Author.Slug/books" class="book-title" alt="@b.Author.Slug" title="Books by @b.Author.Name">
                        Books by @b.Author.Name
                    </a>
                </div>
            </div>
        }
    </div>
</div>



@code {
    [Parameter, EditorRequired]
    public BookListDto[] PopularBooksList { get; set; } = [];
}